<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="200.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.VerifyActionWindowController">
    <children>
      <Pane fx:id="rightPane" prefHeight="200.0" prefWidth="500.0" style="-fx-background-color: EEEEEE;">
         <children>
            <Label fx:id="titleLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="10.0" layoutY="27.0" prefHeight="25.0" prefWidth="480.0" text="ARE YOU SURE YOU WANT TO DELETE THE PROFILE?">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <Label fx:id="textLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="10.0" layoutY="75.0" prefHeight="51.0" prefWidth="480.0" text="This action is irreversible. The profile and its data will be deleted forever and it will not be able to restore it." textAlignment="CENTER" textOverrun="CLIP" wrapText="true">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Button fx:id="confirmBttn" layoutX="55.0" layoutY="142.0" mnemonicParsing="false" onAction="#confirmButton" prefHeight="30.0" prefWidth="168.0" style="-fx-background-radius: 20px;" text="CONFIRM">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="cancelBttn" layoutX="274.0" layoutY="142.0" mnemonicParsing="false" onAction="#cancelButton" prefHeight="30.0" prefWidth="168.0" style="-fx-background-radius: 20px;" text="CANCEL">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Label fx:id="username" alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="10.0" layoutY="1.0" prefHeight="25.0" prefWidth="480.0" text="username" textAlignment="CENTER" textFill="#000066">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
            </Label>
         </children>
      </Pane>
    </children>
</AnchorPane>
