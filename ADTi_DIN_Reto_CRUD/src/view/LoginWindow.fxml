<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane id="AnchorPane" prefHeight="445.0" prefWidth="649.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginWindowController">
   <children>
      <Pane fx:id="leftPane" prefHeight="456.0" prefWidth="179.0" style="-fx-background-color: ACA9FF;">
         <children>
            <ImageView fitHeight="130.0" fitWidth="130.0" layoutX="25.0" layoutY="163.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/logo.png" />
               </image>
            </ImageView>
         </children></Pane>
      <Pane fx:id="rightPane" layoutX="179.0" prefHeight="456.0" prefWidth="470.0" style="-fx-background-color: EEEEEE;" AnchorPane.topAnchor="0.0">
         <children>
            <TextField fx:id="credentialTextField" layoutX="75.0" layoutY="181.0" prefHeight="40.0" prefWidth="320.0" promptText="exampleuser / example@email.com">
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor></TextField>
            <PasswordField fx:id="passwordPasswordField" layoutX="75.0" layoutY="236.0" prefHeight="40.0" prefWidth="320.0" promptText="password">
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor></PasswordField>
            <Button fx:id="logInBttn" layoutX="190.0" layoutY="301.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="30.0" prefWidth="90.0" style="-fx-background-radius: 20px;" text="LOG IN">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
            <Button fx:id="signUpBttn" layoutX="75.0" layoutY="337.0" mnemonicParsing="false" onAction="#openSignUp" prefHeight="25.0" prefWidth="320.0" style="-fx-background-color: null;" text="If you have no account SIGN UP">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
         </children>
      </Pane>
   </children>
</AnchorPane>
